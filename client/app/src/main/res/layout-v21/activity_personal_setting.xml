<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PersonalSettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        app:layout_collapseMode="pin"
        app:expanded="true"
        app:popupTheme="@style/PopupOverlay">


        <ImageButton
            android:id="@+id/movie_info_back"
            android:onClick="onClickBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            app:srcCompat="@drawable/ic_chevron_left_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息设置"
            android:paddingLeft="10dp"
            android:textSize="22dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/set_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left|center_vertical"
        android:text="头像"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@null"
        android:drawableRight="@drawable/ic_account_circle_grey_80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@null"
        android:onClick="onClickUserName">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left|center_vertical"
            android:text="昵称"
            android:background="@null"
            android:textSize="20dp"
            android:paddingLeft="20dp" />

        <TextView
            android:gravity="right"
            android:id="@+id/set_username"
            android:background="@null"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gaali"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@null"
        android:onClick="onClickPhone">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left|center_vertical"
            android:text="手机号"
            android:textSize="20dp"
            android:background="@null"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/set_phone"
            android:gravity="right"
            android:paddingRight="20dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/nearBy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="140dp"
        android:onClick="onClickFeedBack"
        android:text="附近影院" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickFeedBack"
        android:text="用户反馈" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickLogOut"
        android:text="退出登录"
        android:backgroundTint="@color/design_default_color_primary" />


</LinearLayout>